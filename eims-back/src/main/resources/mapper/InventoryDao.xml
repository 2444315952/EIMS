            <result property="minimumStock" column="MINIMUM_STOCK" jdbcType="INTEGER"/>
            <result property="isEnabled" column="IS_ENABLED" jdbcType="INTEGER"/>
            <result property="remake" column="REMAKE" jdbcType="VARCHAR"/>
